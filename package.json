{
  "name": "sam-typescript-bootstrap",
  "author": "Ryan Drohan",
  "version": "0.0.1",
  "description": "An NPM package for easily bootstrapping an AWS SAM project from the command line.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "sam-bootstrap": "lib/index.js"
  },
  "scripts": {
    "start": "node lib/index.js",
    "create": "npm run build && npm run test",
    "test": "jest --config jestconfig.json",
    "local": "sudo npm i -g && sam-bootstrap",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RyanD1996/sam-typescript-bootstrap.git"
  },
  "keywords": [
    "sam",
    "aws",
    "sam template"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RyanD1996/sam-typescript-bootstrap/issues"
  },
  "files": [
    "lib/**/*"
  ],
  "homepage": "https://github.com/RyanD1996/sam-typescript-bootstrap#readme",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@types/js-yaml": "^3.12.5",
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "commander": "^6.2.0",
    "figlet": "^1.5.0",
    "inquirer": "^7.3.3",
    "js-yaml": "^3.14.0",
    "path": "^0.12.7"
  }
}
